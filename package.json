{
  "name": "sandbox",
  "version": "1.0.0",
  "description": "Sandbox API to learn and try a lot of things about Node.js and Express framework",
  "main": "app.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "dev": "nodemon",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabbloquet/nodejs-express-sandbox.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "sandbox",
    "mongodb"
  ],
  "author": "Gabin Bloquet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabbloquet/nodejs-express-sandbox/issues"
  },
  "homepage": "https://github.com/gabbloquet/nodejs-express-sandbox#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "nodemon": "^2.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": 500,
    "env": {
      "NODE_ENV": "development",
      "PORT": 8000
    },
    "exec": "ts-node --files ./src/app.ts ",
    "ext": ".ts,.js",
    "watch": [
      "src"
    ]
  }
}
